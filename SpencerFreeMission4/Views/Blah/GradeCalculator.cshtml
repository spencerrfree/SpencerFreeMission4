@{
    ViewData["Title"] = "This is my Grade Calculator Title";
}

@model GradeCalculatorModel;
<h2>Grade Calculator</h2>
<form method="post">
    <label>Assignments Grade (%):</label>
    <input id="assignments" type="number" asp-for="assignments" /><br />
    <label>Group Projects Grade (%):</label>
    <input id="group" type="number" asp-for="group" /><br />
    <label>Quizzes Grade (%):</label>
    <input id="quizzes" type="number" asp-for="quizzes" /><br />
    <label>Midterm Exam Grade (%):</label>
    <input id="midterm" type="number" asp-for="midterm" /><br />
    <label>Final Exam Grade (%):</label>
    <input id="final" type="number" asp-for="final" /><br />
    <label>Intex Grade (%):</label>
    <input id="intex" type="number" asp-for="intex" /><br />
    <input id="btnSend" type="submit" value="Calculate Final Grade (%)" /><br />
    <input id="output" asp-for="output" />

    <div asp-validation-summary="All"></div>
</form>

<script src="js/myFile.js"></script>